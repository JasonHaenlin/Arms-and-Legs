<?xml version="1.0" encoding="UTF-8" ?>
<types>
    <command>
        <name>byte</name>
        <pattern>(?&lt;addr&gt;[0-9a-zA-Z]+): .byte 0x(?&lt;1&gt;[0-9]+)</pattern>
        <offset>4</offset>
        <replacement>
            <line>sub sp, sp, #4</line>
            <line>movs r3, .1.</line>
            <line>str r3, [sp, #.off.]</line>
        </replacement>
    </command>
